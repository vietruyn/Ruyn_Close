<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c4c4c">

    <LinearLayout
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:background="@drawable/shape_item_list"
        android:gravity="center">

        <com.example.admin.prclosechat_android.view.AutoResizeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textSize="@dimen/textsize_24sp"
            android:textStyle="bold" />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/tvTime"
    android:layout_below="@+id/div1">
    <LinearLayout
        android:layout_width="@dimen/size_216dp"
        android:layout_height="@dimen/size_206dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/shape_avt_call">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/ic_avtcall"
    android:scaleType="centerInside"/>
    </LinearLayout>
</RelativeLayout>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div3"
        android:layout_centerInParent="true"
        android:layout_marginBottom="64dp"
        android:text="00:30:65"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_above="@+id/lnCallOff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/back1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_vollum"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_showkeyboard"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_void"
                android:scaleType="centerInside"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnCallOff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_button_calloff"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call" />
    </LinearLayout>
</RelativeLayout>
